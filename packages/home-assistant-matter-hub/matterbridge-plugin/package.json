{
  "author": "https://github.com/t0bst4r",
  "license": "Apache-2.0",
  "description": "Use Home Assistant Matter Hub as a Matterbridge plugin",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/t0bst4r/matterbridge-home-assistant.git"
  },
  "private": false,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "matter",
    "home",
    "assistant",
    "home assistant",
    "home-assistant",
    "homeassistant"
  ],
  "homepage": "https://github.com/t0bst4r/matterbridge-home-assistant/blob/-/README.md",
  "bugs": "https://github.com/t0bst4r/matterbridge-home-assistant/issues",
  "name": "@home-assistant-matter-hub/matterbridge-plugin",
  "version": "2.5.2",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "build": "tsc",
    "preserve": "matterbridge -add .",
    "serve": "dotenvx run -f .env.local -- matterbridge -bridge -logger debug",
    "reset": "matterbridge -factoryreset"
  },
  "dependencies": {
    "@home-assistant-matter-hub/core": "^2.5.2",
    "json5": "^2.2.3",
    "winston": "^3.13.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@project-chip/matter.js": "^0.9.4",
    "@types/ws": "^8.5.11",
    "matterbridge": "^1.4.1"
  },
  "nx": {
    "targets": {
      "serve": {
        "dependsOn": [
          "build"
        ]
      }
    }
  }
}
